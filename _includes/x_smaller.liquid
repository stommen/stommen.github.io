<div class="col mb-4">
  <a href="{% if x.redirect %}{{ x.redirect }}{% else %}{{ x.url | relative_url }}{% endif %}">
    <div class="card hoverable" style="width: 250px;">
      {% if x.img %}
        {%
          include figure.liquid
          loading="eager"
          path=x.img
          sizes = "175px"
          alt="x thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ x.title }}</h2>
        <p class="card-text">{{ x.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if x.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ x.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if x.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ x.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
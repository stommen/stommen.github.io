<div class="col">
  <a href="{% if education.redirect %}{{ education.redirect }}{% else %}{{ education.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if education.img %}
        {%
          include figure.liquid
          loading="eager"
          path=education.img
          sizes = "250px"
          alt="education thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ education.title }}</h2>
        <p class="card-text">{{ education.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if education.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ education.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if education.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ education.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>